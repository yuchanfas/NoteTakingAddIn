<UserControl x:Class="NoteTakingAddIn.ButtonsAra"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteTakingAddIn"
             mc:Ignorable="d" Height="152" Width="509">
    <StackPanel Orientation="Horizontal">
        <ListBox x:Name="listBox1" Width="200" Height="100" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
            <Button x:Name="annotateButton" Content="ANNOTATION" Width="100" Height="30" Margin="30" Click="annotationBtn_Click"/>

            <Button x:Name="otherButton" Content="マーク付け画面へ" Width="100" Height="30" Click="GoToMarkbutton_Click"/>
        </StackPanel>
        <Button x:Name="saveMapButton" Content="SaveMap" Width="100" Height="30" Margin="10" Click="SaveMapbutton_Click"/>
    </StackPanel>

</UserControl>
